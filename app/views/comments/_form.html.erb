<%= simple_form_for([@video, @video.comments.build]) do |f| %>
	<%#= f.input :name, :as => :hidden, :input_html => { :value => current_user.name } %>
	<%= f.hidden_field :name, :value => current_user.name %>
	<div class="field">
		<div class="control">
			<%= f.input :response, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>
	
	<%= f.button :submit, 'Leave a reply', class: 'button is-primary' %>
<% end %>