<%= simple_form_for @video, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>
    <ul>
    <% @video.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <div class="columns is-centered">
    <div class="column is-half">
    
    <% unless @video.thumbnail.blank? %>
    <%= image_tag (@video.thumbnail.url), id: "previewImage" %>
    <% end %>

    <div class="field">
      <div class="control">
        <div class="file">
          <label class="file-label">
            <%= f.input :videofile, label: "Video", as: :file, input_html: { class: "file-input", type: "file" } %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a video...
              </span>
            </span>
          </label>
        </div>      
      </div>
    </div>

    <div class="field">
      <div class="control">
        <div class="file">
          <label class="file-label">
            <%= f.input :thumbnail, label: "Thumbnail", as: :file, input_html: { class: "file-input", type: "file" } %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a thumbnail...
              </span>
            </span>
          </label>
        </div>      
      </div>
    </div>

    <div class="field">
      <div class="control">
      	<%= f.input :title, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
    	<div class="control">
      	<%= f.input :description, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="field">
    	<div class="control">
      	<%= f.button :submit,class:"button is-primary" %>
      </div>
    </div>
  </div>
</div>
 
<% end %>